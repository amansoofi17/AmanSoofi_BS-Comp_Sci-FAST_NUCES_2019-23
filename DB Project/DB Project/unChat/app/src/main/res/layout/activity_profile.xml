<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".profileActivity">
    <androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/accounts_toolbar"
        android:background="@color/appcolor1"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/profile_activity_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="0dp"
                android:background="@drawable/ic_left_back"
                />

            <TextView
                android:id="@+id/accounts_toolbar_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="Profile"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="23dp"
                />

            <ImageButton
                android:id="@+id/profile_activity_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_baseline_check_24"
                android:layout_marginLeft="230dp"
                />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/profile_activity_pic"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"
        android:padding="5dp"
        android:src="@drawable/ic_baseline_connect_without_contact_24"
        />
    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:padding="3dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_marginLeft="8dp"
            android:textSize="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="0.9"
            android:textStyle="bold"
            />
        <ImageView
            android:id="@+id/profile_activity_edit_name"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_edit_icon"
            app:tint="@color/appcolor1"
            android:layout_weight="0.1"
            />
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profile_activity_name"
        android:editable="false"
        android:text="Users_name"
        android:layout_margin="2dp"
        android:textSize="15dp"
        />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:padding="3dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="username"
            android:layout_marginLeft="8dp"
            android:textSize="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="0.9"
            android:textStyle="bold"
            />
        <ImageView
            android:id="@+id/profile_activity_edit_username"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_edit_icon"
            app:tint="@color/appcolor1"
            android:layout_weight="0.1"
            />
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profile_activity_username"
        android:editable="false"
        android:text="Users_username"
        android:layout_margin="2dp"
        android:textSize="25dp"
        />
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:padding="3dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:layout_marginLeft="8dp"
            android:textSize="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="0.9"
            android:textStyle="bold"
            />
        <ImageView
            android:id="@+id/profile_activity_edit_Bio"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_edit_icon"
            app:tint="@color/appcolor1"
            android:layout_weight="0.1"
            />
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profile_activity_Bio"
        android:editable="false"
        android:text="Description"
        android:layout_margin="2dp"
        android:textSize="15dp"
        />
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:padding="3dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Interests"
            android:layout_marginLeft="8dp"
            android:textSize="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="0.9"
            android:textStyle="bold"
            />
        <ImageView
            android:id="@+id/profile_activity_edit_Interests"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_edit_icon"
            app:tint="@color/appcolor1"
            android:layout_weight="0.1"
            />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chat_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginBottom="3dp" />
</LinearLayout>